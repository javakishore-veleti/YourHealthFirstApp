# .env.v3.local
# Local development environment variables for Flask V3
# Location: python_flask_back_office/healthcare_plans_bo/.env.v3.local
#
# These settings are for running Flask LOCALLY (not in Docker)
# connecting to the Docker MySQL container

# Flask
FLASK_ENV=development
SECRET_KEY=local-dev-secret-key-change-in-production

# JWT
JWT_SECRET_KEY=local-dev-jwt-secret-key-change-in-production

# Database - Local Docker MySQL
# Use port 4306 because we're accessing from OUTSIDE Docker
DB_HOST=localhost
DB_PORT=4306
DB_NAME=healthcare_db
DB_USER=healthcare_app
DB_PASSWORD=healthcare_password

# Optional: Enable SQL query logging
SQLALCHEMY_ECHO=false

# CORS - Allow Angular dev server
CORS_ORIGINS=http://localhost:4200,http://localhost:3000
